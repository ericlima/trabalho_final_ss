
    <!-- Tela de Login -->
    <div class="login-container">
        <div class="login-form">
            <h2 class="text-center mb-4">Login</h2>
            <form action="/login" method="POST" enctype="application/x-www-form-urlencoded">
                <div class="form-group">
                    <label for="email">Utilizador</label>
                    <input type="text" class="form-control" name="email" id="email" placeholder="Digite seu nome de utilizador" required>
                </div>
                <div class="form-group">
                    <label for="password">Palavra-passe</label>
                    <input type="password" class="form-control" name="password" id="password" placeholder="Digite sua palavra-passe" required>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Entrar</button>
            </form>
            <div class="text-center mt-3">
                <% if (error) { %>
                    <p style="color: red;"><%= error %></p>
                <% } %>
            </div>
            <div class="text-center mt-3">
                <a href="#">Esqueceu a palavra-passe?</a>
            </div>
        </div>
    </div>

